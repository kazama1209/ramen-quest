<% breadcrumb :show_review, @review %>
<div class="row pt-3 pb-5">
  <div class="col-md-8">
    <div class="card bg-white border-none shadow-sm">
      <div class="card-header font-weight-bold">
        レビューを編集する
      </div>
      <div class="card-body p-4">
        <%= simple_form_for(@review, url: review_path(@review), local: true) do |f| %>
          <%= render 'form', f: f, review: @review %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="col-md-4">
    <%= render 'users/shared/sidemenu' %>
  </div>
</div>