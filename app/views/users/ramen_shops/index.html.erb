<% breadcrumb :ramen_shops %>
<div class="row pt-3 pb-5">
  <div class="col-md-8 mb-3">
    <% if logged_in? %>
      <div class="card bg-white border-none shadow-sm mb-3">
        <div class="card-header font-weight-bold">
          店舗情報の追加
        </div>
        <div class="card-body">
          <%= link_to new_ramen_shop_path, class: "btn-block btn btn-success" do %>
            <i class="fas fa-edit"></i> 追加する
          <% end %>
          <small>
            <p class="pt-3">※まだデータベースに情報が無い場合はこちらから追加をお願いします。</p>
          </small>
        </div>
      </div>
    <% end %>
    <div class="card bg-white border-none shadow-sm mb-3">
      <div class="card-header font-weight-bold">
        フリーワードから探す
      </div>
      <div class="card-body p-4">
        <div class="d-md-block d-none">
          <div class="form-inline">
            <%= search_form_for @q do |f| %>
              <%= f.search_field :name_or_prefecture_or_address_or_phone_cont, class: "form-control fa", placeholder: "\uf002 地名や店名などを入力..." %>
              <%= f.submit "検索", class: "btn btn-primary" %>
              <%= link_to "リセット", reviews_path, class: "btn btn-danger" %>
            <% end %>
          </div>
        </div>
        <div class="d-md-none d-block">
          <%= search_form_for @q do |f| %>
            <%= f.search_field :name_or_prefecture_or_address_or_phone_cont, class: "form-control fa mb-2", placeholder: "\uf002 地名や店名などを入力..." %>
            <%= f.submit "検索", class: "btn btn-primary btn-block" %>
            <%= link_to "リセット", reviews_path, class: "btn btn-danger btn-block" %>
          <% end %>
        </div>
      </div>
    </div>
    <%= render 'users/ramen_shops/map' %>
    <div class="card bg-white border-none shadow-sm">
      <div class="card-header font-weight-bold">
        店舗一覧（<%= @ramen_shops.count %>件）
      </div>
      <div class="card-body p-4">
        <%= render 'users/shared/ramen_shops', ramen_shops: @ramen_shops  %>
      </div>
    </div>
  </div>
  <div class="col-md-4">
    <%= render 'users/shared/sidemenu' %>
  </div>
</div>