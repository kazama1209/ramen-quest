<div class="card bg-white border-none shadow-sm mb-3">
  <div class="card-header font-weight-bold">
    最近チェックした店
  </div>
  <div class="card-body">
    <% if @browsing_histories.any? %>
      <% @browsing_histories.each do |browsing_history| %>
        <div class="list-group list-group-flush">
          <%= link_to ramen_shop_path(browsing_history.ramen_shop_id) do %>
            <div class="list-group-item"><%= browsing_history.ramen_shop.name %>（<%= browsing_history.ramen_shop.prefecture %>）</div>
          <% end %>
        </div>
      <% end %>
    <% else %>
      <p class="text-center">まだ閲覧履歴がありません</p>
    <% end %>
  </div>
</div>